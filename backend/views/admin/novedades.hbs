<div class="container" style="margin:50px auto">
    <div class="container" style="margin:50px auto">
        <div class="row">
            <div class="col">
                <p class="text-end">
                    Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesi√≥n <i
                            class="fas fa-sign-out-alt"></i> </a>
                </p>
                <div>
                    {{! fila 2}}
                    <div class="row">
                        <div class="col-7">
                            <h3>Listado de Nuevos Productos</h3>
                        </div>
                        <div class="col-5 text-end">
                            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-pluss" aria-hidden="true"></i> Nuevo</a>
                        </div>
                    </div>
                    {{!Fin fila 2}}

                    {{!Fila 3}}
                    <div class="row">
                        <div class="col">
                            <table class="table">
                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">#</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col">Imagen</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each novedades}}
                                    <tr>
                                        <th scope="row">{{id}}</th>
                                        <td>{{producto}}</td>
                                        <td>{{{imagen}}}</td>
                                        <td class="text-end">
                                            <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            <a class="fa fa-trash" href="/admin/novedades/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {{!in fila 3}}

                </div>

            </div>

        </div>
    </div>
